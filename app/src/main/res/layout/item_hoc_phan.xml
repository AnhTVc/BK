<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:elevation="4dp"
    android:layout_margin="5dp"
    android:id="@+id/relativeLayoutItemHocPhan"
    android:clickable="false"
    android:focusable="false"
    android:focusableInTouchMode="false"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:elevation="4dp"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:padding="20dp"
        android:text="A"
        android:id="@+id/tvDiemChu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="2 chỉ"
        android:id="@+id/tvSoTinChi"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/tvDiemChu"
        android:layout_toLeftOf="@+id/tvDiemChu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="Tính Toán Di Động"
        android:id="@+id/tvTenHocPhan"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/tvSoTinChi"
        android:layout_toStartOf="@+id/tvSoTinChi" />

</RelativeLayout>